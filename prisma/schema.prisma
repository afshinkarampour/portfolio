generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

enum SkillCategory {
  FRONTEND
  BACKEND
  DATABASE
  DEVOPS
  MOBILE
  OTHER
}

model Skill {
  id          Int           @id @default(autoincrement())
  name        String
  level       SkillLevel
  category    SkillCategory
  years       Int?
  iconUrl     String?
  description String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

enum ExperienceType {
  FULLTIME
  PARTTIME
  FREELANCE
  INTERNSHIP
}

model Experience {
  id          Int            @id @default(autoincrement())
  title       String
  company     String
  type        ExperienceType
  startDate   DateTime
  endDate     DateTime?
  description String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model Project {
  id           Int      @id @default(autoincrement())
  title        String
  description  String?
  url          String?
  repoUrl      String?
  technologies String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Publication {
  id          Int      @id @default(autoincrement())
  title       String
  journal     String
  publishedAt DateTime
  url         String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Blog {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  content     String
  tags        String[]
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

